@model Data_Layer.Custom_Models.PatientReqCM;
@{
  ViewData["Title"] = "Create Patient Request";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>

<link rel="stylesheet" href="~/css/Create_req.css" asp-append-version="true" />

<partial name="_Header" />
<main class="pb-5">
  <div class="container">
    <div class="bbtn">
      <button
        type="button"
        class="btn btn-outline-primary bibtn"
        onclick="location.href='@Url.Action("Submit_request", "Home" )'"
      >
        < Back
      </button>
    </div>
        <form method="post" class="mainform" enctype="multipart/form-data">
      <div class="mx-3 my-4">
        <div class="mt-3">
          <h4 class="mb-4 pt-3">Patient Information</h4>
          <div class="form-floating mb-3 overflow-hidden intext">
            <textarea
              class="form-control"
              style="height: 100px"
              placeholder="Enter Brief Details Of Symptoms (Optional)"
              id="floatingTextarea"
            ></textarea>
            <label class=" " for="floatingTextarea"
              >Enter Brief Details Of Symptoms
              <span class="optional">(Optional)</span></label
            >
          </div>
          <div class="row intext">
            <div
              class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3"
            >
              <input
                type="text"
                class="form-control"
                id="floatingInputFirst"
                placeholder="First Name"
                aria-label="First Name"
                asp-for="FirstName"
              />
              <label class="ms-2" for="floatingInputFirst"
                >First Name</label
              >
            </div>
            <div
              class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3"
            >
              <input
                type="text"
                class="form-control"
                id="floatingInputLast"
                placeholder="Last Name"
                aria-label="Last Name"
                asp-for="LastName" />
              <label class="ms-2" for="floatingInputLast"
                >Last Name</label
              >
            </div>
          </div>
          <div class="row mb-3 intext">
            <div
              class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating"
            >
              <input
                type="date"
                class="form-control"
                id="floatingInputdate"
                placeholder="Date Of Birth"
                aria-label="bday"
                asp-for="BirthDate"
              />
              <label class="ms-2" for="floatingInputdate"
                >Date Of Birth</label
              >
            </div>
          </div>
        </div>
        <div class="mt-3">
          <h4 class="mb-4 pt-3">Patient Contact Information</h4>
          <div class="row">
            <div
              class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3 intext"
            >
              <input
                type="email"
                class="form-control fetchEmail"
                id="floatingInputEmail"
                placeholder="Email"
                aria-label="email"
                onblur="checkEmailAvailibility()"
                asp-for="Email"
              />
              <label class="ms-2" for="floatingInputEmail">Email</label>
            </div>
            <div
              class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3"
            >
              <input
                id="phone"
                class="form-control contact"
                aria-label="Contact"
                type="tel"
                name="phone"
                asp-for="Phone"
              />
            </div>

            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3 passwordField" style="display:none">
                <input type="password"
                        class="form-control inputs"
                        placeholder="Password"
                        id="floatingPassword"
                        asp-for="PasswordHash" />
                <label for="floatingPassword" class="innertext small">Password</label>
@*                 <button class="btn show-password"
                        type="button"
                        onclick="togglePasswordVisibility()">
                    <img src="~/SRS Screen Shorts/eye-outline.svg"
                            alt="password" />
                </button> *@
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3 passwordField" style="display:none">
                <input type="password"
                        class="form-control inputs"
                        placeholder="Confirm Password"
                        id="floatingConfirmPassword"
                        asp-for="ConfirmPasswordHash" />
                <label for="floatingConfirmPassword" class="innertext small">Confirm Password</label>
@*                 <button class="btn show-password"
                        type="button"
                        onclick="togglePasswordVisibility()">
                    <img src="~/SRS Screen Shorts/eye-outline.svg"
                            alt="password" />
                </button> *@
            </div>



          </div>
        </div>
        <div class="mt-3">
          <h4 class="mb-4">Patient Location</h4>
          <div class="row mb-3 intext">
            <div
              class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3"
            >
              <input
                type="text"
                class="form-control"
                id="floatingInputStreet"
                placeholder="Street"
                aria-label="Street"
                asp-for="Street"
              />
              <label class="ms-2" for="floatingInputStreet">Street</label>
            </div>
            <div
              class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3"
            >
              <input
                type="text"
                class="form-control"
                id="floatingInputCity"
                placeholder="City"
                asp-for="City"
                aria-label="City"
              />
              <label class="ms-2" for="floatingInputCity">City</label>
            </div>
          </div>
          <div class="row mb-3 intext">
            <div
              class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3"
            >
              <input
                type="text"
                class="form-control"
                id="floatingInputState"
                placeholder="State"
                aria-label="State"
                asp-for="State"
              />
              <label class="ms-2" for="floatingInputState">State</label>
            </div>
            <div
              class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3"
            >
              <input
                type="text"
                class="form-control"
                id="floatingInputZipCode"
                placeholder="Zip Code"
                aria-label="Zip Code"
                asp-for="Zipcode"
                />
              <label class="ms-2" for="floatingInputZipCode"
                >Zip Code</label
              >
            </div>
          </div>
          <div class="row mb-3 intext">
            <div
              class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3"
            >
              <input
                type="text"
                class="form-control"
                id="floatingInputroom"
                placeholder="Room # / Suite (Optional)"
                aria-label="room"
                asp-for="Room"
              />
              <label class="ms-2" for="floatingInputroom"
                >Room # / Suite (Optional)</label
              >
            </div>
          </div>
        </div>

        <div class="mt-3">
          <h4 class="mb-4">(Optional) Upload Photo Or Document</h4>
            <div class="row g-3">
                        <div class="col-12 input-group mb-3 d-flex justify-content-between border border-secondary border-opacity-25 rounded-2 p-0 intext">
                    <div class="d-flex align-items-center ps-2">
                        <span id="file-chosen">No file chosen</span>
                    </div>
                    <div>
                        <input type="file" asp-for="Upload" id="actual-btn" multiple hidden />
                        <label class="input-group-text btn btn-info px-4 text-white" for="actual-btn"> <i class="bi bi-cloud-arrow-up"></i> Upload</label>
                    </div>
                </div>
            </div>
        </div>

 @*          <div class="input-group mb-3 border border-2 rounded intext">
            <label
              for="formFileLg"
              class="form-label InputBorder"
              style="width: auto; padding: 5px"
              >Select File</label
            >
            <input
              class="form-control form-control-lg"
              id="formFileLg"
              type="file"
            />
            <button
              class="btn btn-outline-primary d-flex flex-row align-items-center justify-content-center"
              type="button"
              id=""
              style="
              position: absolute;
              right: 0px;
                width: auto;
                height: auto;
                border-radius: 6px;
                background-color: #09d4e3 !important;
                color: #ffffff;
              "
            >
              <ion-icon name="cloud-upload-outline"></ion-icon>
              <span class="text-white d-none d-md-block ">Upload</span>
            </button>
          </div>
         *@

        <div
          class="d-grid gap-2 d-flex justify-content-center justify-content-md-end mt-4 pt-4 mb-5 pb-3"
        >
          <button
            class="btn btn-info me-md-2 text-white fw-bold mb-3"
            type="submit"
          >
            Submit
          </button>
          <button class="btn btn-outline-info fw-bold mb-3" type="button">
            Cancel
          </button>
        </div>
      </div>
    </form>
  </div>
</main>
<partial name="_Footer" />

<script src="~/js/site.js" asp-append-version="true"></script>