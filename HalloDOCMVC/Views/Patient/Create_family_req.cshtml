@{
  ViewData["Title"] = "Create Family Request";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
<link rel="stylesheet" href="~/css/Create_req.css" asp-append-version="true" />

<div class="offcanvas offcanvas-start show pop-up" tabindex="-1" id="offcanvas" aria-labelledby="offcanvasLabel">
  <img class="img2" src="~/SRS Screen Shorts/alert.png" alt="" />
  <h5 class="offcanvas-title title" id="offcanvasLabel">Information</h5>
  <div class="offcanvas-body font-size text-center">
    When submitting a request, you must provide the correct contact
    information for the patient or the respomsibly party. Failure to provide
    the correct email and phone number will delay service or be declined.
  </div>
  <button type="button" class="btn7" data-bs-dismiss="offcanvas" aria-label="Close">
    <span class="ok">Ok</span>
  </button>
</div>
<partial name="_Header" />
<main class="pb-5">
      <div class="container">
    <div class="bbtn">
      <button
        type="button"
        class="btn btn-outline-primary bibtn"
        onclick="location.href='@Url.Action("Submit_request", "Home" )'"
      >
        < Back
      </button>
    </div>
        <form action="" class="mainform">
          <div class="mx-3 my-4">
            <div class="pt-3">
              <h4 class="mb-4 pt-2">Family/Friend Information</h4>
              <div class="row intext">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                  <input type="text" class="form-control" id="floatingInputFirst" placeholder="First Name"
                    aria-label="First Name" />
                  <label class="ms-2" for="floatingInputFirst">Your First Name</label>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                  <input type="text" class="form-control" id="floatingInputLast" placeholder="Last Name"
                    aria-label="Last Name" />
                  <label class="ms-2" for="floatingInputLast">Your Last Name</label>
                </div>
              </div>
              <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                  <input id="phone2" class="form-control contact"  aria-label="Contact"
                    type="tel" name="phone" />
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3 intext">
                  <input type="email" class="form-control" id="floatingInputEmail" placeholder="Email"
                    aria-label="email" />
                  <label class="ms-2" for="floatingInputEmail">Your Email</label>
                </div>
              </div>
              <div class="row mb-3 intext">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                  <input type="text" class="form-control" id="floatingInputroom" placeholder="Room # / Suite (Optional)"
                    aria-label="room" />
                  <label class="ms-2" for="floatingInputroom">Relation With Patient</label>
                </div>
              </div>
            </div>
            <div class="mt-3">
              <h4 class="mb-4 pt-2">Patient Information</h4>
              <div class="form-floating mb-3 overflow-hidden intext">
                <textarea class="form-control" style="height: 100px"
                  placeholder="Enter Brief Details Of Symptoms (Optional)" id="floatingTextarea"></textarea>
                <label class=" " for="floatingTextarea">Enter Brief Details Of Symptoms
                  <span class="optional">(Optional)</span></label>
              </div>
              <div class="row intext">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                  <input type="text" class="form-control" id="floatingInputFirst" placeholder="First Name"
                    aria-label="First Name" />
                  <label class="ms-2" for="floatingInputFirst">First Name</label>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                  <input type="text" class="form-control" id="floatingInputLast" placeholder="Last Name"
                    aria-label="Last Name" />
                  <label class="ms-2" for="floatingInputLast">Last Name</label>
                </div>
              </div>
              <div class="row mb-3 intext">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating">
                  <input type="date" class="form-control" id="floatingInputdate" placeholder="Date Of Birth"
                    aria-label="bday" />
                  <label class="ms-2" for="floatingInputdate">Date Of Birth</label>
                </div>
              </div>
            </div>
            <div class="mt-3">
              <h4 class="mb-4 pt-3">Patient Contact Information</h4>
              <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3 intext">
                  <input type="email" class="form-control" id="floatingInputEmail" placeholder="Email"
                    aria-label="email" />
                  <label class="ms-2" for="floatingInputEmail">Email</label>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                  <input id="phone" class="form-control contact"  aria-label="Contact"
                    type="tel" name="phone" />
                </div>
              </div>
            </div>
            <div class="mt-3">
              <h4 class="mb-4">Patient Location</h4>
              <div class="row mb-3 intext">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                  <input type="text" class="form-control" id="floatingInputStreet" placeholder="Street"
                    aria-label="Street" />
                  <label class="ms-2" for="floatingInputStreet">Street</label>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                  <input type="text" class="form-control" id="floatingInputCity" placeholder="City" aria-label="City" />
                  <label class="ms-2" for="floatingInputCity">City</label>
                </div>
              </div>
              <div class="row mb-3 intext">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                  <input type="text" class="form-control" id="floatingInputState" placeholder="State"
                    aria-label="State" />
                  <label class="ms-2" for="floatingInputState">State</label>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                  <input type="text" class="form-control" id="floatingInputZipCode" placeholder="Zip Code"
                    aria-label="Zip Code" />
                  <label class="ms-2" for="floatingInputZipCode">Zip Code</label>
                </div>
              </div>
              <div class="row mb-3 intext">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                  <input type="text" class="form-control" id="floatingInputroom" placeholder="Room # / Suite (Optional)"
                    aria-label="room" />
                  <label class="ms-2" for="floatingInputroom">Room # / Suite (Optional)</label>
                </div>
              </div>
            </div>

            <div class="mt-3">
              <h4 class="mb-4">(Optional) Upload Photo Or Document</h4>
              <div class="input-group mb-3 border border-2 rounded intext">
                <label for="formFileLg" class="form-label InputBorder" style="width: auto; padding: 5px">Select
                  File</label>
                <input class="form-control form-control-lg" id="formFileLg" type="file" />
                <button class="btn btn-outline-primary d-flex flex-row align-items-center justify-content-center"
                  type="button" id="" style="
                      position: absolute;
                      right: 0px;
                      width: auto;
                      height: auto;
                      border-radius: 6px;
                      background-color: #09d4e3 !important;
                      color: #ffffff;
                    ">
                  <ion-icon name="cloud-upload-outline"></ion-icon>
                  <span class="text-white d-none d-md-block">Upload</span>
                </button>
              </div>
            </div>
            <div class="d-grid gap-2 d-flex justify-content-center justify-content-md-end mt-4 pt-4 mb-5 pb-3">
              <button class="btn btn-info me-md-2 text-white fw-bold mb-3" type="button">
                Submit
              </button>
              <button class="btn btn-outline-info fw-bold mb-3" type="button">
                Cancel
              </button>
            </div>
          </div>
        </form>
      </div>
</main>
<partial name="_Footer" />
<script src="~/js/site.js" asp-append-version="true"></script>