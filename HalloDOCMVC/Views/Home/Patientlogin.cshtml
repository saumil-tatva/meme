@model Data_Layer.DataModels.Aspnetuser;
@{
    ViewData["Title"] = "patient Login";
}
<link rel="stylesheet" href="~/css/Patientlogin.css" asp-append-version="true" />
<div class="container-fluid">
  <div
    class="mx-lg-1 px-lg-1 mx-md-3 px-md-3 mx-sm-2 px-sm-2 pt-2 d-flex flex-column justify-content-between"
    style="height: 100vh"
  >
    <div class="dmode">
      <button
        onclick="toggleDarkTheme()"
        class="mt-4 mx-4"
        type="button"
        id="colorButton"
        style="border-radius: 17px; border-color: aqua">
        <i id="moon" class="bi bi-moon text-info fs-4"></i>
        <i id="sun" class="bi bi-sun text-info fs-4 d-none"></i>
      </button>
    </div>

    <div class="form1 demo-wrap">
      <img
      class="demo-bg"
      src="~/SRS Screen Shorts/cropbg.jpg"
      alt=""
    />
      <div class=" mb-3" style="width: 350px;">

        <div class="text-center logo mt-2 pt-5">
          <img
            src="~/SRS Screen Shorts/logo.png"
            class="img-fluid"
            alt="Image Not Available"
          />
        </div>
        <div class="demo-content mt-5 mb-5 pb-5">
          <div class="mb-4 ">
            <a
              asp-controller="Home" asp-action="Patient_site"
              class="text-primary"
              style="text-decoration: none; color: aqua !important"
              > < Back </a>
          </div>
          <h2 class="mb-3 text-center mt-4 mb-4">
            Login To Your Account
          </h2>
           <form method="post">
          <div class="mb-4 form-floating">
              <input
              type="email"
              class="form-control inputs"
              placeholder="email"
              id="exampleInputUsername"
              asp-for="Email"
            />
            <label for="exampleInputUsername" class="innertext small" 
              >Email</label
            >
            <button class="btn show-password" type="button">
              <img
                src="~/SRS Screen Shorts/person-circle-outline.svg"
                alt="password"
              />
            </button>
          </div>
          
          <div class="mb-4 form-floating">
            <input
              type="password"
              class="form-control inputs"
              placeholder="Password"
              id="exampleInputPassword1"
              asp-for="Passwordhash"
            />
            <label for="exampleInputPassword1" class="innertext small"
              >Password</label
            >
            <button
              class="btn show-password"
              type="button"
              onclick="togglePasswordVisibility()"
            >
              <img
                src="~/SRS Screen Shorts/eye-outline.svg"
                alt="password"
              />
            </button>
          </div>
          <div class="mb-4 pt-4 d-grid">
            <button
              type="submit"
              class="btn btn-primary"
              style="background-color: aqua"
            >
              Log In
            </button>
          </div
          <div class="mb-4 text-center">
            <a
              asp-controller="Home" asp-action="Patientforgotpass"
              class="text-primary"
              style="text-decoration: none; color: aqua !important"
              >Forgot Password?</a>
          </div>
          </form>
        </div>
      </div>
    </div>
    <div class="mb-3 pt-lg-2 d-flex footer justify-content-center">
      <a href="#" class="text-secondary mx-2" style="text-decoration: none"
        >Terms of Condition
      </a>
      <span>|</span>
      <a href="#" class="text-secondary mx-2" style="text-decoration: none">
        Privacy Policy</a
      >
    </div>
  </div>
</div>
<script src="~/js/site.js" asp-append-version="true"></script>